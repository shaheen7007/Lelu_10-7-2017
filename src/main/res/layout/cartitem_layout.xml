<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:background="@drawable/cartitem_shape2"
        android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_weight="1.45"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="70dp"
            android:background="#000"
            android:scaleType="fitXY"
            android:id="@+id/cartItemImage_id"
            android:layout_height="match_parent" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            >
        </View>


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="Baybee BMW Car"
                android:textColor="#000"
                android:gravity="top"
                android:id="@+id/cartItemName_id"
                android:layout_weight="1"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_height="0dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/rs_symbol"
                    android:textColor="#000"
                    android:id="@+id/cartItemPriceTxt_id"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/rs_symbol"
                android:textStyle="bold"
                android:textColor="#ef0404"
                android:id="@+id/cartItemRealprice_id"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:text="(33% off)"
                android:layout_marginLeft="5dp"
                android:textColor="#ef0404"
                android:id="@+id/percentage_id"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_height="wrap_content" />


            </LinearLayout>
        </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:gravity="end"
            android:layout_weight=".55"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="end"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:id="@+id/cartminus_id"
               android:text="-"
                android:gravity="center"
                android:layout_weight=".85"
                android:textStyle="bold"
                android:textColor="#565555"
               android:textSize="40sp"
                android:layout_height="match_parent" />

                <TextView

                    android:layout_width="0dp"
                    android:text="1"
                    android:textColor="#ef0404"
                    android:layout_weight="1.3"
                    android:background="@drawable/cartitem_shape"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cartItemQtytxt_id" />

                <TextView
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:id="@+id/cartplustx_id"
                android:text="+"
                android:layout_weight=".85"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#565555"
               android:textSize="22sp"
                android:layout_height="match_parent" />
        </LinearLayout>
            </LinearLayout>


    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/colorgrey"
            >
        </View>

        <TextView
            android:layout_width="match_parent"
            android:text="REMOVE"
            android:id="@+id/removeBTN_id"
            android:textColor="#484747"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>