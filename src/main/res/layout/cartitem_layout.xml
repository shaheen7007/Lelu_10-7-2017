<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/cartitem_shape"
        android:layout_height="100dp">

        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="90dp"
            android:background="#000"
            android:scaleType="fitXY"
            android:id="@+id/cartItemImage_id"
            android:layout_height="match_parent" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            >
        </View>


        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:weightSum="3"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="Baybee BMW Car"
                android:textColor="#000"
                android:gravity="top"
                android:id="@+id/cartItemName_id"
                android:layout_weight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_height="0dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"

                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/rs_symbol"
                    android:textColor="#000"
                    android:id="@+id/cartItemPriceTxt_id"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/rs_symbol"
                    android:textColor="#ef0404"
                    android:id="@+id/cartItemRealprice_id"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="(33% off)"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ef0404"
                    android:id="@+id/percentage_id"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"

            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_height="match_parent">

                <ImageView
                    android:layout_width="25dp"
                    android:src="@drawable/min"
                    android:layout_gravity="end"
                    android:id="@+id/cartminus_id"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:textColor="#ef0404"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_height="wrap_content"
                    android:id="@+id/cartItemQtytxt_id" />

                <ImageView
                    android:layout_width="25dp"
                    android:src="@drawable/plus"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:id="@+id/cartplus_id"
                    android:scaleType="fitXY"
                    android:layout_height="25dp" />

        </LinearLayout>






    </LinearLayout>


</LinearLayout>