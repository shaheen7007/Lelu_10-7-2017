<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_account"
    android:orientation="vertical"
    android:background="@color/colorgrey2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.webquiver.lelu.MyAccountActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="@color/colorPrimary"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/menuitem"
            android:layout_height="match_parent">
            <ImageView android:src="@drawable/back_btn"
                android:background="?attr/actionBarItemBackground"
                android:layout_width="@dimen/backbtn_width"
                android:layout_marginLeft="10dp"
                android:layout_height="@dimen/backbtn_height"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:id="@+id/bk_id" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="My Account"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:id="@+id/homeitem"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/cartitem_shape2"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/userpic_width"
            android:layout_gravity="center"
            android:src="@drawable/userpic"
            android:layout_height="@dimen/userpic_height" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="User Name"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/nametxt_id" />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:text="Mobilenumber"
            android:id="@+id/phonetxt_id"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textAlignment="center"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="15dp"
    android:weightSum="2"
    android:layout_marginTop="10dp"
    android:background="@drawable/cartitem_shape2"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="0dp"
        android:text="My wallet"
        android:layout_weight="1"
        android:textColor="@color/colorgreen"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="0dp"
        android:text="Rs.1100"
        android:layout_weight="1"
        android:textAlignment="textEnd"
        android:textColor="@color/colorgreen"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_height="wrap_content" />



</LinearLayout>






</LinearLayout>
