<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cart"
    android:background="@color/colorgrey2"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.webquiver.lelu.CartActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="@color/colorPrimary"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/menuitem"
            android:layout_height="match_parent">
            <ImageView android:src="@drawable/back_btn"
                android:background="?attr/actionBarItemBackground"
                android:layout_width="@dimen/backbtn_width"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/bck_id"
                android:layout_marginLeft="10dp"
                android:layout_height="@dimen/backbtn_height"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="ADDRESSES"
            android:textColor="#fff"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/menuitem"
            android:id="@+id/homeitem"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#fff"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="Step: 2/3"
            android:layout_marginRight="10dp"
            android:id="@+id/stepnotxt_id"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="9dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:background="@color/colorgrey2"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:background="@color/colorgrey2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="You have 3 addresses saved"
                android:id="@+id/numaddrTXT_id"
                android:textAlignment="center"
                android:textColor="@color/colorlinkblue"
                android:layout_height="match_parent" />

            <!--

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="(View)"
                android:textAlignment="textStart"
                android:textColor="@color/colorgreen"
                android:layout_height="match_parent"
                android:id="@+id/viewsavedaddr_id" />
                -->

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:divider="@null"
            android:background="@color/colorgrey2"
            android:fadeScrollbars="false"
            android:dividerHeight="0dp"
            android:id="@+id/addressListall_id"></ListView>







    </LinearLayout>




</LinearLayout>