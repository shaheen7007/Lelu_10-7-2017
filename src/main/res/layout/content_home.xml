<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.webquiver.lelu.HomeActivity"
    tools:showIn="@layout/activity_home">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_height="match_parent">






    <LinearLayout
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/adlyt_id"
        android:background="@drawable/categoryshape"
        android:layout_height="wrap_content"

        >

<ImageView
    android:layout_width="match_parent"
    android:src="@drawable/ad"
    android:scaleType="fitXY"
    android:layout_height="120dp" />
        </LinearLayout>

<TextView
    android:layout_marginTop="15dp"
    android:layout_width="wrap_content"
    android:text="TOP SELLINGS"
    android:layout_marginStart="15dp"
    android:textColor="#0331c4"
    android:layout_height="wrap_content" />

             <com.webquiver.lelu.classes.ExpandableHeightGridView
            android:id="@+id/grid"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:isScrollContainer="false"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />



    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
