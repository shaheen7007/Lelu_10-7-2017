<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cart"
    android:background="@color/colorgrey2"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.webquiver.lelu.CartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="#fff"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="0dp"
            android:weightSum="2"
            android:id="@+id/lin1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="Order no: 104427"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/ordrID_id" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/colorlinkblue"
                        android:id="@+id/ADDR_name_id"
                        android:text="Shaheen Shabib"

                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:weightSum="5"
                        android:id="@+id/fuladr"
                        android:visibility="gone"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_height="wrap_content">


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_weight=".25"
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:gravity="end"
                                android:layout_height="match_parent">

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:text="afdf sfsfsdf dfdsdf"

                                style="@android:style/TextAppearance.DeviceDefault.Small"
                                android:layout_height="wrap_content"
                                android:id="@+id/ADDR_address1_id" />




                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:text="Eranjipalam"
                                android:gravity="top"
                                android:layout_gravity="top"
                                style="@android:style/TextAppearance.DeviceDefault.Small"
                                android:layout_height="wrap_content"
                                android:id="@+id/ADDR_place_id" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:text="Kozhikode"
                                style="@android:style/TextAppearance.DeviceDefault.Small"
                                android:layout_height="wrap_content"
                                android:id="@+id/ADDR_district_id" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:text="PIN - 676541"
                                style="@android:style/TextAppearance.DeviceDefault.Small"
                                android:layout_height="wrap_content"
                                android:id="@+id/ADDR_pin_id" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:text="Kerala"
                                style="@android:style/TextAppearance.DeviceDefault.Small"
                                android:layout_height="wrap_content"
                                android:id="@+id/ADDR_state_id" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content">

                        </LinearLayout>






                </LinearLayout>









            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_height="0dp">

            <ListView
                android:layout_width="match_parent"
                android:id="@+id/prod_list"
                android:layout_marginLeft="5dp"
                android:divider="@null"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent">

            </ListView>
        </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:textAlignment="textStart"
                    android:text="Grand Total"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:textAlignment="textEnd"
                    android:text="Rs. 10,090.00"
                    style="@android:style/TextAppearance.DeviceDefault.Small"

                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>




    </LinearLayout>


</LinearLayout>
    </LinearLayout>