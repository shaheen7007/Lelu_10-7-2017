<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cart"
    android:background="@color/colorgrey2"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.webquiver.lelu.CartActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="@color/colorPrimary"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/menuitem"
            android:layout_height="match_parent">
            <ImageView android:src="@drawable/back_btn"
                android:background="?attr/actionBarItemBackground"
                android:layout_width="@dimen/backbtn_width"
                android:layout_marginLeft="10dp"
                android:layout_height="@dimen/backbtn_height"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:id="@+id/bk_id" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="Order Placed"
            android:textColor="#fff"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:id="@+id/homeitem"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="3"
        android:id="@+id/lyt"
        android:background="@drawable/placeodersuccess_shape"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/lin1"
            android:padding="20dp"

            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="Order Placed"
                android:textAlignment="center"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:id="@+id/TRCK_OID" />


            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:textColor="#fff"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:text="Order placed successfully on 24-07-2017"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/itemsnpricetxt_id" />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/cartitem_shape2"
            android:id="@+id/lin2"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="Lelu representative will contact you soon"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/msgTXT_id" />


        </LinearLayout>


        </LinearLayout>

</LinearLayout>