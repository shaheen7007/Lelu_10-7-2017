<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView android:src="@drawable/ack"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp"
        android:id="@+id/back_id"
        android:onClick="onclickhandler_itemactivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    <ImageView android:src="@drawable/cart2"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="30dp"
        android:onClick="onclickhandler_itemactivity"
        android:layout_height="30dp"
        android:layout_marginLeft="19dp"
        android:scaleType="fitCenter"
        android:layout_marginRight="15dp"
        android:id="@+id/cartitem"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="12"
            android:id="@+id/cartnumTXT_itemactivity_id"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:gravity="center"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:background="@drawable/rounded_textview_cart"
            android:textColor="#FFF"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/cartitem" />
    </RelativeLayout>


</RelativeLayout>