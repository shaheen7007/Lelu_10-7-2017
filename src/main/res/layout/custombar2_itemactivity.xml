<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView android:src="@drawable/ack"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="@dimen/menuitem1custbar2_width"
        android:layout_height="@dimen/menuitem1custbar2_height"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="5dp"
        android:id="@+id/back_id"
        android:onClick="onclickhandler_itemactivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView android:src="@drawable/cart2"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/actionBarItemBackground"
            android:layout_width="@dimen/menuitem2custbar2_width"
            android:layout_height="@dimen/menuitem2custbar2_height"
            android:onClick="onclickhandler_itemactivity"

            android:layout_marginLeft="19dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="15dp"
            android:id="@+id/cartitem"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="12"
            android:id="@+id/cartnumTXT_itemactivity_id"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:gravity="center"
            android:textAlignment="center"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:background="@drawable/rounded_textview_cart"
            android:textColor="#FFF"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/cartitem" />
    </RelativeLayout>


</RelativeLayout>