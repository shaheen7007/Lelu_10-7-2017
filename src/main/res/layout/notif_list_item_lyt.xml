<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/cartitem_shape3"
    android:id="@+id/memoList_back"
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/textView_memoDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:shadowColor="@color/colorAccent"
        android:text="17/12/2017"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/textView_memoSubject"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sum4"
        android:shadowColor="@color/colorAccent"
        android:text="Subject "
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/textView_memoDesc"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Description"
        android:textSize="13sp"/>

</LinearLayout>